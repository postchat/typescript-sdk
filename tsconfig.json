{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es5",
      "es2015",
      "es2015.promise",
      "es2016",
      "esnext.asynciterable"
    ],
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "strictNullChecks": false,
    "target": "ES5",
  },
  "exclude": ["node_modules", "build", "scripts", "src/Tests"],
  "include": [
    "./**/*.ts"
  ]
}
